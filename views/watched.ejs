<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Your watched List</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <!-- Navbar -->
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Watch Movies App</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/list">View Movies</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/watched">View Watched movies</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout">Logout</a>
          </li> 
        </ul>
      </div>
    </div>
  </nav>
  <!-- Cart Content -->
  <div class="container">
    <h2 class="mt-4">Watched Movies</h2>
    <% if (watched.length === 0) { %>
      <p>Your watched list is empty.</p>
    <% } else { %>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Movie</th>
            <th>Release date</th>
            <th>Genre</th>
          </tr>
        </thead>
        <tbody>
          <% let total = 0; %>
          <% for (let i = 0; i < watched.length; i++) { %>
            <tr>
                <td><%= watched[i].movieName %></td>
                <td><img src="/images/<%= watched[i].image %>" width="80" class="img-thumbnail"></td>
                <td><%= new Date(watched[i].release_date).toDateString() %></td>
                <td><%= watched[i].genre %></td>
            </tr>
          <% }; %>
        </tbody>
      </table>

      <div class="mt-4">
        <a href="/list" class="btn btn-secondary">Back to View Movies</a>
      </div>
    <% } %>
  </div>
</body>
</html>
