<!-- movie.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Watch Movies App</title>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <div class="container-fluid">
          <a class="navbar-brand" href="/">Watch Movies App</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="navbar-nav">
              <% if (user.role === "admin") { %>
                <li class="nav-item">
                  <a class="nav-link" href="/inventory">Inventory</a>
                </li> 
                <li class="nav-item">
                  <a class="nav-link" href="/addMovie">Add new movie</a>
                </li> 
              <% } %>
              <li class="nav-item">
                <a class="nav-link" href="/logout">Logout</a>
              </li> 
            </ul>
          </div>
        </div>
    </nav>

    <div class="container">
        <p>Welcome, <%= user.username %> (<%= user.role %>)</p>
        <br>
        <div class="text-center"><h2>Movie Details</h2></div>
        <br>
        <% if (movie) { %> <!-- Check if movie data exists -->
            <div>
                <p><b>Movie Name:</b><br> <%= movie.movieName %></p>
                <p><b>Movie Image:</b><br> <img src = "../images/<%= movie.image %>" width="20%"></p>
                <p><b>Movie release_date:</b><br> <%= new Date(movie.release_date).toDateString() %></p>
                <p><b>Genre:</b><br> <%= movie.genre %></p> 
            </div>
        <% } else { %>
            <p>No movie found.</p>
        <% } %>
        <% if (user.role === "admin") { %>
          <a href ="/inventory">Back</a>
        <% } else { %>
          <a href ="/list">Back</a>
        <% } %>
    </div>
    
</body>
</html>
